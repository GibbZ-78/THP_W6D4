<%if notice%>
  <p class="alert alert-warning alert-dismissible fade show" role="alert" id="notice"><%= notice %></p>
<%end%>

<p>Title: <%=@gossip.title%></p>
<p>Content: <%=@gossip.content%></p>
<p>
  <button type="button" class="btn-sm btn-primary col-1 m-2">
    <i class="bi bi-chat-left-text"></i>
    Comments
    <span class="badge badge-light"><%=@gossip.comments.count%></span>
  </button>
  <button type="button" class="btn-sm btn-primary col-1 m-2">
    <i class="bi bi-bookmarks-fill"></i>
    Tags
    <span class="badge badge-light"><%=@gossip.tags.count%></span>
  </button>
  <button type="button" class="btn-sm btn-primary col-1 m-2">
    <i class="bi bi-hand-thumbs-up"></i>
    Likes
    <span class="badge badge-light"><%=@gossip.likes.count%></span>
  </button>
</p>
<ul>
  <%@gossip.likes.each do |my_like|%>
      <li><%="#{my_like.user.first_name} #{my_like.user.last_name}"%></li>
  <%end%>
</ul>

<p>
  <%= link_to 'Edit', edit_gossip_path(@gossip), class: "btn btn-primary col-1" %>
  <%= link_to 'Back', gossips_path, class: "btn btn-light col-1" %>
</p>
